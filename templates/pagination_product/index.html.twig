{% extends 'base.html.twig' %}

{% block title %}Hello PaginationProductController!{% endblock %}

{% block body %}
<div class="container">

    <div class="row mt-3 py-5">
    {% for product in products %}
        <div class="col-md-3 d-flex justify-content-center">
            <div class="card p-2">
                <div class="text-center">
                    <img src="{{ product.image }}" class="img-fluid" width="250" />
                </div>
                <div>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="category">{{ product.name }}</span>
                        <span class="price">{{ product.price }}</span>
                    </div>
                    <p>{{ product.description|u.truncate(30,'...') }}</p>
                </div>
                <div class="content">
                    <div class="buttons d-flex justify-content-center">
                        <button class="btn btn-outline-primary mr-1">Aper√ßu</button>
                        <a href="{{ path('cart_add', {'id':product.id}) }}" class="btn btn-primary"><i class="fas fa-shopping-basket"></i>Ajouter au panier</a>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
    </div>
</div>


{% endblock %}
